{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "mocha"]
  },
  "include": [
    "src/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "src/__tests__",
    "src/__mocks__"
  ]
}